{
  "name": "Pawn Party",
  "version": "1.1.3",
  "author": "Phil Brockman",
  "description": "This extension hides all the chess pieces on the board, making the position invisible to the player. This means that you have to rely on your visualization skills and memory to play chess. It's a great way to improve your visualization skills and memory.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chess",
    "visualization",
    "memory",
    "game"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.2",
    "@radix-ui/react-dialog": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.5",
    "@types/chrome": "^0.0.218",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.12",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-react": "^1.3.2",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.6.4",
    "vite": "^2.9.13"
  }
}
